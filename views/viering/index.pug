    p Welcome to #{title}

    div(id='demo_gsap')
        img(class='logo' src='/images/logo.jpg' alt='Image of Benedictus')

    div(id='demo_kute')
        div.box.green#selector1
        div.box.orange#selector2
        div.box.grey#selector3
